@model ProductManagement.Models.Tbl_Users
@{
    Layout = null;
}

@*@{
        ViewBag.Title = "login";
        Layout = "~/Views/Shared/_Layout.cshtml";
    }*@

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login </title>
    
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <style>
        body
        {
            background-color:#aed8d8;
        }
    </style>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <center><h2 style="color:white">LOGIN</h2></center>
       
    </div>
    <br />
    <br />
    <br />
    <br />
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-8 col-md-8 col-sm-8">
                @if (@TempData["msg"] != null)
                {
                    <div class="alert alert-success" style="margin-left:470px;text-align:center">
                        <strong>@TempData["msg"]</strong>
                    </div>
                }
                @if (ViewBag.msg != null)
                {
                    <div class="alert alert-danger" style="margin-left:470px;text-align:center">
                        <strong>@ViewBag.msg</strong>
                    </div>
                }
            <div class="container" style="width:40%">
                <br />
                <br />
                @using (@Html.BeginForm("login", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    <div class="form-group" style="margin-left:240px;width:100%;">
                        <label for="email">Email:</label>
                        @Html.TextBoxFor(x => x.User_Email, htmlAttributes: new { @class = "form-control", required = "required" })
                    </div>
                    <div class="form-group" style="margin-left:240px;width:100%;">
                        <label for="pwd">Password:</label>
                        @Html.PasswordFor(x => x.User_Password, new { @class = "form-control", required = "required" })
                    </div>

                    <br />
                    <input type="submit" value="Login Now!" style="margin-left:240px;width:100%;" class="btn btn-primary btn-block" />
                    <input type="button" class="btn-danger btn-block" style="margin-left:240px;width:100%;height:34px;margin-top:30px;border-radius:5px;" value="Back" onclick="window.location.href='@Url.Action("Index","Home" )';" />


                }
            </div>

                <div class="col-lg-4 col-md-4 col-sm-4">
                    <br>
                    <br>

                    <div style="margin-left:615px;width:80%">
                        <h6>Don't Have Account?</h6><h5> @Html.ActionLink("Register Now!", "register")</h5>
                    </div>
                </div>
                <div style="margin-top:-200px;margin-left:900px;">

                    <img src="~/Content/images/1.png" />
                </div>
            </div>
        </div>
    </div>

</body>
</html>
