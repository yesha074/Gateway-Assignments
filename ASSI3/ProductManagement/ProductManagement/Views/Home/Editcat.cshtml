@model ProductManagement.Models.Tbl_Category

@{
    ViewBag.Title = "Editcat";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<div class="navbar navbar-inverse" style="width:88%;margin-top:-88px;"> <center><h2 style="color:white">Update Category</h2></center></div>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
      
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.C_Id)

        <div class="form-group">
            @Html.LabelFor(model => model.C_Name, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.EditorFor(model => model.C_Name, new { htmlAttributes = new { @class = "form-control" ,required="required"} })
                @Html.ValidationMessageFor(model => model.C_Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-4">
                <input type="submit" value="Edit Category" class="btn btn-danger" />
                <input type="button" class="btn-danger" style="margin-left:20px;height:34px;margin-top:30px;width:120px;border-radius:5px;" value="Cancel" onclick="window.location.href='@Url.Action("Addcat","Home" )';" />

            </div>
        </div>
    </div>
}

